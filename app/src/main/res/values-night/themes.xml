<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeJam" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradient_blue</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/gradient_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.WeJam.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WeJam.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WeJam.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_bottom_rounded</item>
    </style>

    <style name="WhiteProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:progressTint">@color/white</item>
        <item name="android:indeterminateTint">@color/white</item>
    </style>

    <style name="TabLayoutProfile" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearanceProfile</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="TabTextAppearanceProfile" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="CustomToggleButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@drawable/selector_toggle_button</item>

        <item name="android:textColor">@drawable/selector_toggle_button_text</item>
    </style>

    <style name="GeneralButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="OutlineButton" parent="GeneralButton">
        <item name="android:background">@drawable/button_gradient_outline</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>